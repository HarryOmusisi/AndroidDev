<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img1"
    android:padding="15dp"
    tools:context=".payments">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3fff"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Services"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView_mainHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circles"
            android:gravity="center"
            android:text="Remote Health's Paradise"
            android:textColor="@color/black"
            android:textStyle="italic|bold" />


        <EditText
            android:id="@+id/etPhone"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn"
            android:gravity="center"
            android:hint="Enter Phone Number"
            android:inputType="phone"
            android:paddingLeft="15dp"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:textStyle="italic" />
        <EditText
            android:id="@+id/etAmount"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn"
            android:gravity="center"
            android:hint="Insert Amount"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:textStyle="italic" />
        <Button
            android:id="@+id/btnPay"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="M-pesa Pay"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_color"
            android:textColor="#FFFBF8"/>


    </LinearLayout>
</RelativeLayout>